<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".create_journey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/create_trip_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_left_icon"
            android:background="@android:color/transparent"
            android:contentDescription="Search"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jj"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/kellyslab"
            android:textColor="#0DCDD9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            android:contentDescription="Menu"
            android:visibility="invisible"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="3dp"
        android:background="#0DCDD9"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a Journey"
            android:textSize="22sp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/trips_content_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title             :"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:id="@+id/create_trip_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="5dp"
                    android:textColor="#000000"
                    android:textAlignment="textStart"
                    android:hint="Enter journey title"
                    android:background="@drawable/even_round_bg"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="18dp"
                    android:paddingStart="10dp"
                    android:textColorHint="#000000" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination :"
                android:textSize="18dp"
                android:padding="5dp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/create_trip_destinaniton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="5dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:hint="Enter journey destinantions"
                android:textSize="18dp"
                android:paddingStart="10dp"
                android:background="@drawable/even_round_bg"
                android:layout_marginHorizontal="5dp"
                android:textColorHint="#000000" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Start Time  :"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:gravity="center">

                </TextView>
                <Button
                android:id="@+id/create_trip_start_time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select start Time"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:background="#0D47A1"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" End Time   :"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:gravity="center">
                </TextView>
                <Button
                    android:id="@+id/create_trip_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Select end Time"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="#0D47A1"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" Description:"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:id="@+id/create_journey_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="12dp"
                    android:minHeight="150dp"
                    android:paddingHorizontal="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/even_round_bg"
                    android:textAlignment="textStart"
                    android:hint="Detail of your journey..."
                    android:textSize="18dp"
                    android:textColorHint="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Check-point:"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:id="@+id/create_trip_checkpints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/even_round_bg"
                    android:textAlignment="textStart"
                    android:hint="Detail of your journey..."
                    android:textSize="18dp"
                    android:textColorHint="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Budget (P)  :"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:id="@+id/create_trip_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/even_round_bg"
                    android:textAlignment="textStart"
                    android:hint="Budget per person"
                    android:textSize="18dp"
                    android:textColorHint="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Member      :"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:id="@+id/create_trip_capacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/even_round_bg"
                    android:textAlignment="textStart"
                    android:hint="Budget per person"
                    android:textSize="18dp"
                    android:textColorHint="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Gender        :"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000">
                </TextView>
                <CheckBox
                    android:id="@+id/maleCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Male"
                    android:textColor="#000000"
                    android:layout_marginEnd="16dp" />
                <CheckBox
                    android:id="@+id/femaleCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textColor="#000000"
                    android:text="Female" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_trips_done"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Create Journey"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="3dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/create_trips_discard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Discard Journey"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="3dp"
                    android:textSize="16sp"
                    android:textColor="#ff0000"
                    android:background="@drawable/button_blank"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>