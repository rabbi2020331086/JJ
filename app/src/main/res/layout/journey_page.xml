<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/search_button_goto_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_left_icon"
            android:background="@android:color/transparent"
            android:contentDescription="goto_home_button"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jj"
            android:layout_marginEnd="30dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/kellyslab"
            android:textColor="#0DCDD9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="#0DCDD9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#0000FF"
        android:id="@+id/journey_page_title"
        android:gravity="center_horizontal"
        android:text="Sajeking">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/get_started_pic"
            android:id="@+id/journey_page_cover_image"
            android:scaleType="centerCrop"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:text="Manage Journey"
            android:id="@+id/journey_page_manage_journey"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:background="@drawable/bg_edit_profile">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/journey_page_buttons_layout"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="40dp"
            android:visibility="gone"
            android:paddingVertical="3dp"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/photos_icon"
                android:id="@+id/journey_page_photos"
                android:contentDescription="image">

            </ImageButton>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/group_chat_icon"
                android:id="@+id/journey_page_group_chat"
                android:contentDescription="image">
            </ImageButton>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/members_icon"
                android:contentDescription="image"
                android:id="@+id/journey_page_members">
            </ImageButton>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/unchecked_notification_icon"
                android:contentDescription="image"
                android:id="@+id/journey_page_notifications">
            </ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="500dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check In: "
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journey_page_event_date"
                    android:text=""
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#ff0000"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From      : "
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journey_page_event_from"
                    android:text=""
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#ff0000"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/journey_page_introduction_layout"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="Introduction"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:id="@+id/journey_page_introduction"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:id="@+id/journey_page_checi_in_layout"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:text="Check in"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:id="@+id/journey_page_check_in"
                        android:text=""
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:id="@+id/journey_page_destinations_layout"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:text="Destinations"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:id="@+id/journey_page_destinations"
                        android:text= ""
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:id="@+id/journey_page_roadmap_layout"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:text="Roadmap"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:id="@+id/journey_page_roadmap"
                        android:text=""
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/journey_page_highlights_layout"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:text="Highlights"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:id="@+id/journey_page_highlights"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:text="About Organiser"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:text="How is your Jourmey Roadmap"
                        android:id="@+id/journey_page_about_organiser"
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:text="Emergency"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caption_background"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:text="Phone: 999\nSylhet metropoliton police."
                        android:id="@+id/journey_page_emergency"
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>