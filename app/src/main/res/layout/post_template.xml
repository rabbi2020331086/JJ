<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/rounded_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Delete"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/delete_post"
            android:visibility="gone"
            android:background="@drawable/bg_edit_profile"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:padding="2dp">
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/post_item_profile_icon"
                android:text="A"
                android:textSize="35sp"
                android:textColor="#70CCD9"
                android:textStyle="bold">
            </TextView>
        </FrameLayout>

        <TextView
            android:id="@+id/post_item_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Profile Name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/post_item_timestamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:textStyle="normal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="3dp"
        android:background="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rouned_background_white">
        <TextView
            android:id="@+id/post_item_content_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:lineSpacingExtra="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/caption_background"
            android:gravity="start"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:id="@+id/post_item_image"
        android:src="@drawable/loading_image"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/cnt_react"
            android:text="(50)"
            android:textSize="15sp"
            android:textColor="#000000">
        </TextView>
        <FrameLayout
            android:layout_width="60dp"
            android:id="@+id/post_item_react_done_layout_button"
            android:visibility="gone"
            android:layout_height="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="❤️"
                android:textSize="35sp"
                android:textColor="#70CCD9"
                android:textStyle="bold">
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="60dp"
            android:id="@+id/post_item_react_button"
            android:layout_height="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/heart_icon" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/post_text_id"
        android:textColor="#ff0000"
        android:layout_height="wrap_content">

    </TextView>
</LinearLayout>
