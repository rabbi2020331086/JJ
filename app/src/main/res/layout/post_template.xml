<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/rounded_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background" />
            <ImageView
                android:id="@+id/post_item_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <TextView
            android:id="@+id/post_item_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Profile Name"
            android:textColor="#000000"
            android:textSize="22sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="3dp"
        android:background="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rouned_background_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:id="@+id/post_item_content_caption"
            android:textSize="16sp"
            android:textColor="#000000">
        </TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:id="@+id/post_item_image"
        android:src="@drawable/get_started_pic"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/rounded_bottom_background">
        <Button
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:text="react"
            android:id="@+id/post_item_react_button"
            android:textColor="#ffffff">
        </Button>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:text="Comment"
            android:id="@+id/post_item_comment_button"
            android:textColor="#ffffff">
        </Button>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:text="Share"
            android:id="@+id/post_item_share_button"
            android:textColor="#ffffff">
        </Button>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/post_text_id"
        android:textColor="#ff0000"
        android:layout_height="wrap_content">

    </TextView>
</LinearLayout>
