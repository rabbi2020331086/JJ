<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/goto_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_left_icon"
            android:background="@android:color/transparent"
            android:contentDescription="goto_home_button"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jj"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/kellyslab"
            android:textColor="#0DCDD9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            android:contentDescription="Menu"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/profile_image_background"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginVertical="15dp"
                android:textColor="#0DCDD9"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:layout_height="55dp">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:text="Timeline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:id="@+id/profile_timeline"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="Photos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:id="@+id/profile_photos_button"
                />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="3dp"
                android:background="#0DCDD9"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Edit Profile"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/EditProfile"
                android:visibility="gone">

            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textStyle="bold"
                android:textColor="#0DCDD9"
                android:textSize="18sp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp">
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: "
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:id="@+id/email"
                            android:textColor="#111111"
                            android:textStyle="italic"
                            android:gravity="end"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone:"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="257dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:id="@+id/phone"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#111111"
                            android:textStyle="italic"
                            android:gravity="end"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:id="@+id/address"
                            android:textColor="#111111"
                            android:textStyle="italic"
                            android:gravity="end"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nationality:"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:id="@+id/nationality"
                            android:textColor="#111111"
                            android:textStyle="italic"
                            android:gravity="end"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interests:"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/interests"
                            android:textSize="14sp"
                            android:textColor="#111111"
                            android:textStyle="italic"
                            android:gravity="end"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender:"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/gender"
                            android:textSize="14sp"
                            android:textColor="#111111"
                            android:textStyle="italic"
                            android:gravity="end"
                            android:padding="8dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Preferences"
                android:textStyle="bold"
                android:textColor="#0DCDD9"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destinations: "
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#111111"
                        android:textStyle="italic"
                        android:id="@+id/destinations"
                        android:gravity="end"
                        android:padding="8dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Season:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="234dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#111111"
                        android:id="@+id/seasons"
                        android:textStyle="italic"
                        android:gravity="end"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:id="@+id/duration"
                        android:textColor="#111111"
                        android:textStyle="italic"
                        android:gravity="end"
                        android:padding="8dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget:"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/budget"
                        android:textSize="14sp"
                        android:textColor="#111111"
                        android:textStyle="italic"
                        android:gravity="end"
                        android:padding="8dp" />
                </TableRow>
            </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
